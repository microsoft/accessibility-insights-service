{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runFunctionsHost",
            "type": "shell",
            "command": "func host start",
            "isBackground": true,
            "problemMatcher": "$func-watch",
            "options": {
                "env": {
                    "languageWorkers__node__arguments": "--inspect=9858"
                },
                "cwd": "${fileDirname}../../../../dist/scanner"
            },
            "dependsOn": "installExtensions"
        },
        {
            "label": "installExtensions",
            "command": "func extensions install",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}../../../../dist/scanner"
            },
            "dependsOn": ["build", "copy-local-settings"]
        },
        {
            "label": "copy-local-settings",
            "command": "npm run copy-local-settings",
            "type": "shell"
        },
        {
            "label": "build",
            "command": "npm run build",
            "type": "shell"
        }
    ]
}
