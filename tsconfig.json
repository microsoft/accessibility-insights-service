{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "awesomeTypescriptLoaderOptions": {
        "usePrecompiledFiles": true,
        "useWebpackText": true
    }
}
