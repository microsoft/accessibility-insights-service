{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current unit test file",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand",
                "${relativeFile}",
                "--coverage",
                "false"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Attach to JavaScript Functions",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "run-dev-container"
        }
    ]
}
