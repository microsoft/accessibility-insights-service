    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start debugging cli",
            "type": "node",
            "request": "launch",
            "outFiles": ["${workspaceFolder}/dist/index.js"],
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/index.ts",
            "preLaunchTask": "tsc",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args": ["--url=\"https://www.stackoverflow.com/\""]
        }
    ]
}
