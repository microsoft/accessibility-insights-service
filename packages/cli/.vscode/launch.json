    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start debugging cli",
            "type": "node",
            "request": "launch",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/cli.ts",
            "preLaunchTask": "run",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "smartStep": true,
            "args": ["--crawl", "--url", "https://www.bing.com/", "--maxUrls", "3", "--restart", "--simulate"]
        }
    ]
}
