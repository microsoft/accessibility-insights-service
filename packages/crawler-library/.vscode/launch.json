    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start debugging crawler",
            "type": "node",
            "request": "launch",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/index.ts",
            "preLaunchTask": "run",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "smartStep": true,
            "args": ["--url", "https://beta.support.xbox.com/", "--simulate", "--selectors", "button"]
        }
    ]
}
