{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Web Insights Service REST API"
    },
    "servers": [],
    "paths": {
        "/scans": {
            "post": {
                "summary": "Create scan requests",
                "operationId": "createScans",
                "parameters": [
                    {
                        "name": "api-version",
                        "in": "query",
                        "required": true,
                        "description": "The client API version",
                        "schema": {
                            "type": "string"
                        },
                        "example": "1.0"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/ScanRunRequest"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Accepted",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ScanRunResponse"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/scans/{scanId}": {
            "get": {
                "summary": "Get scan result",
                "operationId": "getScan",
                "parameters": [
                    {
                        "name": "scanId",
                        "in": "path",
                        "required": true,
                        "description": "The scan request ID",
                        "schema": {
                            "type": "string",
                            "example": "8868acf5-7fee-486b-a985-71b03e4ccb3f"
                        }
                    },
                    {
                        "name": "api-version",
                        "in": "query",
                        "required": true,
                        "description": "The client API version",
                        "schema": {
                            "type": "string"
                        },
                        "example": "1.0"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ScanRunResultResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ScanRunErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/scans/$batch": {
            "post": {
                "summary": "Get scan results",
                "operationId": "getScanBatch",
                "parameters": [
                    {
                        "name": "api-version",
                        "in": "query",
                        "required": true,
                        "description": "The client API version",
                        "schema": {
                            "type": "string"
                        },
                        "example": "1.0"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/ScanBatchRequest"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "oneOf": [
                                            {
                                                "$ref": "#/components/schemas/ScanRunResultResponse"
                                            },
                                            {
                                                "$ref": "#/components/schemas/ScanRunErrorResponse"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/scans/{scanId}/reports/{reportId}": {
            "get": {
                "summary": "Get scan report",
                "operationId": "getReport",
                "parameters": [
                    {
                        "name": "scanId",
                        "in": "path",
                        "required": true,
                        "description": "The scan request ID",
                        "schema": {
                            "type": "string",
                            "example": "8868acf5-7fee-486b-a985-71b03e4ccb3f"
                        }
                    },
                    {
                        "name": "reportId",
                        "in": "path",
                        "required": true,
                        "description": "The report ID",
                        "schema": {
                            "type": "string",
                            "example": "de5e45a1-acf2-4af1-ac3e-9cdd6ee2720a"
                        }
                    },
                    {
                        "name": "api-version",
                        "in": "query",
                        "required": true,
                        "description": "The client API version",
                        "schema": {
                            "type": "string"
                        },
                        "example": "1.0"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "example": {
                                    "href": "SARIF document per following specification https://docs.oasis-open.org/sarif/sarif/v2.1.0/cs01/sarif-v2.1.0-cs01.html"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ScanRunRequest": {
                "type": "object",
                "required": ["url"],
                "properties": {
                    "url": {
                        "type": "string",
                        "example": "https://accessibilityinsights.io/"
                    },
                    "priority": {
                        "description": "Priority values can range from -1000 to 1000, with -1000 being the lowest priority and 1000 being the highest priority. The default value is 0.",
                        "default": 0,
                        "type": "integer",
                        "example": 100
                    },
                    "scanType": {
                        "description": "The targeted type of the scan",
                        "type": "string",
                        "enum": ["accessibility", "privacy"],
                        "example": "accessibility"
                    },
                    "scanNotifyUrl": {
                        "type": "string",
                        "example": "https://www.example.com/api/notification"
                    },
                    "deepScan": {
                        "type": "boolean",
                        "description": "Enable crawling and scanning of website's pages under baseURL provided",
                        "example": true
                    },
                    "site": {
                        "type": "object",
                        "required": ["baseUrl"],
                        "properties": {
                            "baseUrl": {
                                "description": "The web site root URL",
                                "type": "string",
                                "example": "https://accessibilityinsights.io/"
                            },
                            "knownPages": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "description": "Web page that is already known and should be included in a scan along with pages found by crawling"
                                },
                                "example": ["https://accessibilityinsights.io/docs/web/overview/"]
                            },
                            "discoveryPatterns": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "description": "RegEx pattern used by web crawler to specify which URLs should website include"
                                },
                                "example": ["^http(s?)://accessibilityinsights.io/(.*)"]
                            }
                        }
                    },
                    "reportGroups": {
                        "type": "array",
                        "items": {
                            "required": ["consolidatedId"],
                            "properties": {
                                "consolidatedId": {
                                    "description": "The unique report ID for the given reporting period",
                                    "type": "string",
                                    "example": "0a196327-146e-4866-b72a-fce1bfabb0fa"
                                }
                            }
                        }
                    },
                    "authenticationType": {
                        "description": "If present, the type of authentication to be used to authenticate web pages.",
                        "type": "string",
                        "enum": ["entraId"],
                        "example": "entraId"
                    },
                    "privacyScan": {
                        "type": "object",
                        "description": "If present, the url will be scanned for cookies instead of accessibility issues.",
                        "required": ["cookieBannerType"],
                        "properties": {
                            "cookieBannerType": {
                                "description": "The type of consent banner in the target page",
                                "type": "string",
                                "enum": ["standard"],
                                "example": "standard"
                            }
                        }
                    },
                    "browserValidations": {
                        "type": "array",
                        "description": "Enables browser validations.",
                        "items": {
                            "type": "string",
                            "enum": ["highContrastProperties"],
                            "example": "highContrastProperties"
                        }
                    },
                    "scanDefinitions": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "description": "Definition for the additional scanner.",
                            "required": ["name"],
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "enum": ["accessibility_agent"],
                                    "example": "accessibility_agent"
                                },
                                "args": {
                                    "type": "object",
                                    "description": "Parameters to provide to the scanner for execution.",
                                    "properties": {
                                        "string": {
                                            "type": "string",
                                            "example": "value"
                                        },
                                        "integer": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "boolean": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    }
                                },
                                "options": {
                                    "type": "object",
                                    "description": "Parameters to configure the service for controlling scanner execution.",
                                    "properties": {
                                        "string": {
                                            "type": "string",
                                            "example": "value"
                                        },
                                        "integer": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "boolean": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "ScanRunResponse": {
                "type": "object",
                "required": ["url"],
                "properties": {
                    "scanId": {
                        "type": "string",
                        "example": "8868acf5-7fee-486b-a985-71b03e4ccb3f"
                    },
                    "url": {
                        "type": "string",
                        "example": "https://accessibilityinsights.io/"
                    },
                    "error": {
                        "$ref": "#/components/schemas/WebApiError"
                    }
                }
            },
            "ScanResult": {
                "type": "object",
                "required": ["state"],
                "properties": {
                    "state": {
                        "$ref": "#/components/schemas/ScanState"
                    },
                    "issueCount": {
                        "type": "integer",
                        "format": "int32",
                        "minimum": 0,
                        "example": 10
                    }
                }
            },
            "NotificationResult": {
                "type": "object",
                "required": ["state"],
                "properties": {
                    "state": {
                        "type": "string",
                        "enum": ["pending", "queued", "queueFailed", "sending", "sent", "sendFailed"],
                        "example": "sent"
                    },
                    "pageResponseCode": {
                        "type": "integer",
                        "example": 200
                    },
                    "scanNotifyUrl": {
                        "type": "string",
                        "example": "https://www.example.com/api/notification"
                    }
                }
            },
            "Links": {
                "type": "object",
                "required": ["rel", "href"],
                "properties": {
                    "rel": {
                        "type": "string",
                        "default": "self",
                        "enum": ["self"],
                        "example": "self"
                    },
                    "href": {
                        "type": "string",
                        "example": "https://example.azure-api.net/scans/8868acf5-7fee-486b-a985-71b03e4ccb3f/reports/de5e45a1-acf2-4af1-ac3e-9cdd6ee2720a?api-version=1.0"
                    }
                }
            },
            "ScanRun": {
                "type": "object",
                "required": ["state"],
                "properties": {
                    "timestamp": {
                        "description": "Full date and time string format as defined by ISO 8601",
                        "type": "string",
                        "example": "2024-04-02T00:25:32.508Z"
                    },
                    "error": {
                        "$ref": "#/components/schemas/ScanRunError"
                    },
                    "state": {
                        "$ref": "#/components/schemas/RunState"
                    },
                    "pageResponseCode": {
                        "type": "integer",
                        "example": 200
                    },
                    "pageTitle": {
                        "type": "string",
                        "example": "Accessibility Insights"
                    },
                    "scanRunDetails": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "description": "Scan run result for the additional scanner.",
                            "required": ["name", "state"],
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "enum": ["accessibility_agent"],
                                    "example": "accessibility_agent"
                                },
                                "state": {
                                    "$ref": "#/components/schemas/RunState"
                                },
                                "details": {
                                    "type": "object",
                                    "properties": {}
                                }
                            }
                        }
                    }
                }
            },
            "ScanReport": {
                "type": "object",
                "required": ["reportId", "format", "links"],
                "properties": {
                    "reportId": {
                        "type": "string",
                        "example": "de5e45a1-acf2-4af1-ac3e-9cdd6ee2720a"
                    },
                    "format": {
                        "type": "string",
                        "description": "SARIF format specification https://www.oasis-open.org/committees/sarif/charter.php",
                        "enum": ["axe", "sarif", "html", "consolidated.html", "json", "consolidated.json", "page.png", "page.mhtml"]
                    },
                    "links": {
                        "$ref": "#/components/schemas/Links"
                    }
                }
            },
            "DeepScanResultItem": {
                "type": "object",
                "required": ["scanId", "url", "scanRunState"],
                "properties": {
                    "scanId": {
                        "type": "string",
                        "example": "d6cdd091-a985-4dfd-a046-57c7f4d23bfc"
                    },
                    "url": {
                        "type": "string",
                        "example": "https://accessibilityinsights.io/docs/web/overview/"
                    },
                    "scanRunState": {
                        "$ref": "#/components/schemas/RunState"
                    },
                    "scanResultState": {
                        "$ref": "#/components/schemas/ScanState"
                    }
                }
            },
            "ScanBatchRequest": {
                "type": "object",
                "required": ["scanId"],
                "properties": {
                    "scanId": {
                        "type": "string",
                        "example": "8868acf5-7fee-486b-a985-71b03e4ccb3f"
                    }
                }
            },
            "ScanRunResultResponse": {
                "type": "object",
                "required": ["scanId", "url", "run"],
                "properties": {
                    "scanId": {
                        "type": "string",
                        "example": "8868acf5-7fee-486b-a985-71b03e4ccb3f"
                    },
                    "url": {
                        "type": "string",
                        "example": "https://accessibilityinsights.io/"
                    },
                    "deepScanId": {
                        "type": "string",
                        "example": "d6cdd091-a985-4dfd-a046-57c7f4d23bfc"
                    },
                    "scanResult": {
                        "$ref": "#/components/schemas/ScanResult"
                    },
                    "deepScanResult": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/DeepScanResultItem"
                        }
                    },
                    "reports": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ScanReport"
                        }
                    },
                    "run": {
                        "$ref": "#/components/schemas/ScanRun"
                    },
                    "notification": {
                        "$ref": "#/components/schemas/NotificationResult"
                    },
                    "authentication": {
                        "$ref": "#/components/schemas/AuthenticationResult"
                    },
                    "browserValidationResult": {
                        "$ref": "#/components/schemas/BrowserValidationResult"
                    }
                }
            },
            "WebApiError": {
                "type": "object",
                "required": ["code", "codeId", "message"],
                "properties": {
                    "code": {
                        "type": "string",
                        "enum": [
                            "ResourceNotFound",
                            "InvalidResourceId",
                            "InvalidJsonDocument",
                            "RequestBodyTooLarge",
                            "InvalidURL",
                            "InternalError",
                            "MissingApiVersionQueryParameter",
                            "MissingContentTypeHeader",
                            "UnsupportedContentType",
                            "UnsupportedApiVersion",
                            "OutOfRangePriority",
                            "MalformedBody",
                            "MissingReleaseVersion",
                            "InvalidScanNotifyUrl",
                            "InvalidReportGroup",
                            "MissingRequiredDeepScanProperties",
                            "TooManyKnownPages",
                            "InvalidKnownPageURL"
                        ],
                        "example": "ResourceNotFound"
                    },
                    "codeId": {
                        "type": "integer",
                        "format": "int32",
                        "minimum": 4001,
                        "maximum": 5999,
                        "example": 4001
                    },
                    "message": {
                        "type": "string",
                        "example": "The specified resource does not exist."
                    }
                }
            },
            "ScanRunError": {
                "type": "object",
                "required": ["code", "codeId", "message"],
                "properties": {
                    "code": {
                        "type": "string",
                        "enum": [
                            "AuthenticationError",
                            "BannerXPathNotDetected",
                            "EmptyPage",
                            "ForeignResourceRedirection",
                            "HttpErrorCode",
                            "InternalError",
                            "InvalidContentType",
                            "InvalidUrl",
                            "NavigationError",
                            "ResourceLoadFailure",
                            "ScanTimeout",
                            "SslError",
                            "UnsupportedResource",
                            "UrlNavigationTimeout",
                            "UrlNotResolved"
                        ],
                        "example": "InvalidContentType"
                    },
                    "codeId": {
                        "type": "integer",
                        "format": "int32",
                        "minimum": 9001,
                        "maximum": 9999,
                        "example": 9009
                    },
                    "message": {
                        "type": "string",
                        "example": "Only html content type pages are supported for scanning"
                    }
                }
            },
            "ScanRunErrorResponse": {
                "type": "object",
                "required": ["scanId", "error"],
                "properties": {
                    "scanId": {
                        "type": "string",
                        "example": "8868acf5-7fee-486b-a985-71b03e4ccb3f"
                    },
                    "error": {
                        "$ref": "#/components/schemas/WebApiError"
                    }
                }
            },
            "ScanState": {
                "type": "string",
                "default": "pending",
                "enum": ["pending", "pass", "fail"],
                "example": "fail"
            },
            "RunState": {
                "type": "string",
                "default": "pending",
                "enum": ["pending", "accepted", "queued", "running", "report", "completed", "failed", "unscannable"],
                "example": "completed"
            },
            "AuthenticationResult": {
                "type": "object",
                "required": ["detected", "state"],
                "properties": {
                    "detected": {
                        "type": "string",
                        "enum": ["undetermined", "entraId"],
                        "example": "entraId"
                    },
                    "state": {
                        "type": "string",
                        "enum": ["succeeded", "failed", "unauthenticated"],
                        "example": "succeeded"
                    }
                }
            },
            "BrowserValidationResult": {
                "type": "object",
                "properties": {
                    "highContrastProperties": {
                        "type": "string",
                        "default": "pending",
                        "enum": ["pending", "pass", "fail", "error"],
                        "example": "pass"
                    }
                }
            }
        }
    }
}
