{
    "id": "scan-req-schedule",
    "schedule": {
        "recurrenceInterval": "PT2H"
    },
    "jobSpecification": {
        "priority": 0,
        "constraints": {
            "maxWallClockTime": "PT1H",
            "maxTaskRetryCount": 0
        },
        "jobManagerTask": {
            "id": "scan-req-sender-task",
            "commandLine": "/bin/bash -c run-scan-request-sender.sh",
            "resourceFiles": [
                {
                    "autoStorageContainerName": "batch-scan-request-sender-script"
                }
            ],
            "constraints": {
                "maxWallClockTime": "PT1H",
                "retentionTime": "P7D",
                "maxTaskRetryCount": 0
            },
            "killJobOnCompletion": true,
            "userIdentity": {
                "autoUser": {
                    "scope": "task",
                    "elevationLevel": "nonadmin"
                }
            },
            "runExclusive": true
        },
        "commonEnvironmentSettings": [
            {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "%APP_INSIGHTS_TOKEN%"
            },
            {
                "name": "AZURE_STORAGE_SCAN_QUEUE",
                "value": "scanrequest"
            },
            {
                "name": "KEY_VAULT_URL",
                "value": "%KEY_VAULT_TOKEN%"
            }
        ],
        "poolInfo": {
            "poolId": "scan-request-pool"
        }
    }
}
