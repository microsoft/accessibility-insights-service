        {
            "name": "Get scan status",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200 and report id is present\", function () {",
                            "    pm.response.to.have.status(200);",
                            "    var response = pm.response.json();",
                            "    var reportId;",
                            "    if(response !== undefined ",
                            "        && response.run.state !== undefined ",
                            "        && response.run.state === 'completed' ",
                            "        && response.reports !== undefined ",
                            "        && response.reports[0] !== undefined)",
                            "    {",
                            "        reportId =  response.reports[0].reportId;",
                            "        pm.environment.set(\"report_id\",reportId);",
                            "    } else {",
                            "        pm.expect(reportId).to.be.true",
                            "    }",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [
                    {
                        "warning": "This is a duplicate header and will be overridden by the Authorization header generated by Postman.",
