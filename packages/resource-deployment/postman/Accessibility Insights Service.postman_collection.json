    "item": [
        {
            "name": "Submit accessibility scan",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 202\", function () {",
                            "    pm.response.to.have.status(202);",
                            "    var response = pm.response.json();",
                            "    pm.environment.set(\"scan_id\", response[0].scanId);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "warning": "This is a duplicate header and will be overridden by the Authorization header generated by Postman.",
                        "key": "Authorization",
                        "value": "Bearer {{auth_token}}",
                        "type": "text",
                        "disabled": true
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "[\n    {\n        \"url\": \"https://www.microsoft.com/en-us/\",\n        \"priority\": 100,\n        \"deepScan\": false,\n        \"site\": {\n            \"baseUrl\": \"https://www.microsoft.com/en-us/\",\n            \"knownPages\": []\n        },\n        \"reportGroups\": [\n            {\n                \"consolidatedId\": \"a11y-microsoft-com-xH3yAAk\"\n            }\n        ]\n    }\n]"
                },
                "url": {
                    "raw": "{{base_url}}/scans?api-version={{api_version}}",
                    "host": ["{{base_url}}"],
                    "path": ["scans"],
                    "query": [
                        {
                            "key": "api-version",
                            "value": "{{api_version}}"
                        }
                    ]
                }
            },
            "response": []
        },
